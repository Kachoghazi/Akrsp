<%- layout("layouts/biloperets") %>

<div class="container">
  <h1 class="title">Edit Marks for Submission</h1>
  <form action="/edit-submission/<%= submission._id %>" method="POST">
    <div class="form-group">
      <label for="marks">Marks:</label>
      <input type="number" id="marks" name="marks" class="form-control" value="<%= submission.marks %>" required>
    </div>
    <button type="submit" class="btn btn-success">Update Marks</button>
  </form>
</div>
